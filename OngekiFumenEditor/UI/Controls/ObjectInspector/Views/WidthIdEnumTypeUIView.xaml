<UserControl
    x:Class="OngekiFumenEditor.UI.Controls.ObjectInspector.Views.WidthIdEnumTypeUIView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:valueconverters="clr-namespace:OngekiFumenEditor.UI.ValueConverters"
    mc:Ignorable="d">
    <GroupBox
        Margin="5,0,5,0"
        BorderBrush="DarkGray"
        Foreground="{DynamicResource EnvironmentToolWindowText}"
        Header="{Binding PropertyInfo.DisplayPropertyName}"
        ToolTip="{Binding PropertyInfo.DisplayPropertyTipText}">
        <StackPanel>
            <Grid Name="MainPanel" Margin="5,0,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Margin="0,0,15,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}"
                    Text="{Binding PropertyInfo.DisplayPropertyName}"
                    ToolTip="{Binding PropertyInfo.DisplayPropertyTipText}">
                </TextBlock>
                <ComboBox
                    Grid.Column="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    DisplayMemberPath="Id"
                    ItemsSource="{Binding EnumValues}"
                    SelectedValue="{Binding PropertyInfo.ProxyValue}" />
            </Grid>
            <Grid Margin="5,0,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,15,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}"
                    Text="WidthDraw" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,15,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}"
                    Text="{Binding PropertyInfo.ProxyValue.WidthDraw}">
                </TextBlock>
                <TextBlock
                    Grid.Row="1"
                    Margin="0,0,15,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}"
                    Text="WidthJudge" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,15,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}"
                    Text="{Binding PropertyInfo.ProxyValue.WidthJudge}">
                </TextBlock>
            </Grid>
        </StackPanel>
    </GroupBox>
</UserControl>
